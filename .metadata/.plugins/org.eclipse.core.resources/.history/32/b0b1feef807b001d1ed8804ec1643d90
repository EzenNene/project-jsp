package ch07;

public class Calculator {
	// 필드
	private int n1;
	private int n2;
	private String op;
	
	// 메소드
	public long calc() {
		long result = 0;
		
		switch(op) {
		case "+" : result = n1 + n2; break;
		case "-" : result = n1 - n2; break;
		case "*" : result = n1 * n2; break;
		case "/" : result = n1 / n2; break;
	}
		
		return result;
	}
}
